<Window x:Class="DACK_HQTCSDL.Window_ThemPhong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DACK_HQTCSDL"
        mc:Ignorable="d"
        Title="Thêm phòng mới" Height="190" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="15"
            BorderBrush="#0277BD"
            BorderThickness="0,0,0,2">
            <StackPanel Orientation="Vertical">
                <!--Tên Phòng-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                        Width="130"
                        Content="Tên Phòng"
                        Style="{StaticResource MyLabel}" />
                    <TextBox Grid.Column="1"
                        x:Name="textbox_TenPhong"
                        BorderBrush="#0277BD"
                        Style="{StaticResource MyTextBox}" />
                </Grid>
                <!--Báo lỗi Phòng-->
                <Label
                    x:Name="lb_Error_TenPhong"
                    Margin="130,0,0,0"
                    HorizontalAlignment="Left"
                    BorderBrush="#649EFF"
                    Content="Tên phòng phải từ 1-50 ký tự"
                    Style="{StaticResource MyLabelError}"
                    Visibility="Collapsed" />
            </StackPanel>
        </Border>
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="button_ThemPhong"
                Width="100"
                Margin="10"
                Background="#039BE5"
                Click="button_ThemPhong_Click"
                Content="Thêm"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="White"
                Style="{StaticResource MyButton}" />
            <Button
                x:Name="button_Cancel"
                Width="100"
                Margin="10"
                Background="#039BE5"
                Click="button_Cancel_Click"
                Content="Cancel"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="White"
                Style="{StaticResource MyButton}" />
        </StackPanel>
    </Grid>
</Window>
