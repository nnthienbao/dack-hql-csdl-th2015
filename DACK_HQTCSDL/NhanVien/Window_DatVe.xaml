<Window x:Class="DACK_HQTCSDL.Window_DatVe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DACK_HQTCSDL"
        mc:Ignorable="d"
        Title="Đặt vé" Height="600" Width="1366"
        WindowState="Maximized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Background="#7700AA8D" Padding="10">
            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <CheckBox x:Name="CheckBox_MaKhachHang" Content="Mã khách hàng" FontWeight="SemiBold" FontSize="14" Margin="5 13 0 6" BorderBrush="#00AA8D"/>
                    <Label Content="Họ và tên" Margin="5 5 0 0" Style="{StaticResource MyLabel}" />
                    <Label Content="Giới tính" Margin="5 5 0 0" Style="{StaticResource MyLabel}" />
                    <Label Content="Ngày sinh" Margin="5 5 0 0" Style="{StaticResource MyLabel}" />
                    <Label Content="CMND" Margin="5 5 0 0" Style="{StaticResource MyLabel}" />
                    <Label Content="Số điện thoại" Margin="5 5 0 0" Style="{StaticResource MyLabel}" />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBox x:Name="textbox_MaKhachHang" Width="150" HorizontalAlignment="Left" Style="{StaticResource MyTextBox}" BorderBrush="#00AA8D" />
                    <TextBox x:Name="textbox_TenKhachHang" Margin="0 5 5 0" Style="{StaticResource MyTextBox}" BorderBrush="#00AA8D" />
                    <StackPanel Height="32" Orientation="Horizontal" Margin="0 5 0 0" >
                        <RadioButton Margin="0 10 0 0" Content="Nam" FontWeight="SemiBold" FontSize="13" BorderBrush="#00AA8D" />
                        <RadioButton Margin="10 10 0 0" Content="Nữ" FontWeight="SemiBold" FontSize="13" BorderBrush="#00AA8D" />
                    </StackPanel>
                    <DatePicker x:Name="textbox_NgaySinh" Text="1/04/1990" Width="150" HorizontalAlignment="Left" Style="{StaticResource MyDatePicker}" BorderBrush="#00AA8D" />
                    <TextBox x:Name="textbox_CMND" Width="150" HorizontalAlignment="Left" Style="{StaticResource MyTextBox}" BorderBrush="#00AA8D" />
                    <TextBox x:Name="textbox_SoDienThoai" Width="150" HorizontalAlignment="Left" Style="{StaticResource MyTextBox}" BorderBrush="#00AA8D" />
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Column="1" Background="#7700AA8D" Padding="0 10 10 10">
            <Grid Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Border Background="Blue">
                    <Image Source="../Image/Slot.png" Width="{Binding}" Height="{Binding}" />
                </Border>
                
            </Grid>
        </Border>
    </Grid>
</Window>
