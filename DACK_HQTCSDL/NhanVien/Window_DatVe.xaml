                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton
                            x:Name="cbb_MaKhachHang"
                            Width="126"
                            Margin="5,13,0,6"
                            BorderBrush="#00AA8D"
                            Content="Mã khách hàng"
                            FontSize="14"
                            FontWeight="SemiBold"
                            GroupName="group_TTDatVe"
                            IsChecked="True" />
                        <TextBox
                            x:Name="textbox_MaKhachHang"
                            Width="240"
                            HorizontalAlignment="Left"
                            BorderBrush="#00AA8D"
                            KeyUp="textbox_MaKhachHang_KeyUp"
                            Style="{StaticResource MyTextBox}"
                            TextChanged="textbox_MaKhachHang_TextChanged" />
                    </StackPanel>
                    <Label
                        x:Name="lb_Error_MaKhachHang"
                        Margin="126,0,0,0"
                        HorizontalAlignment="Left"
                        Content="Không tìm thấy khách hàng"
                        Style="{StaticResource MyLabelError}"
                        Visibility="Collapsed" />
                    <StackPanel Orientation="Horizontal">
                        <RadioButton
                            x:Name="cbb_SoDienThoai"
                            Width="126"
                            Margin="5,13,0,6"
                            BorderBrush="#00AA8D"
                            Checked="cbb_SoDienThoai_Checked"
                            Content="Số điện thoại"
                            FontSize="14"
                            FontWeight="SemiBold"
                            GroupName="group_TTDatVe" />
                        <TextBox
                            x:Name="textbox_SoDienThoai"
                            Width="240"
                            HorizontalAlignment="Left"
                            BorderBrush="#00AA8D"
                            Style="{StaticResource MyTextBox}" />
                    </StackPanel>
                    <StackPanel x:Name="panel_ThongTinKhachHang" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <Label
                                x:Name="Label_HoVaTen"
                                Width="126"
                                Margin="5,5,0,0"
                                Content="Họ và tên"
                                Style="{StaticResource MyLabel}"
                                Visibility="Visible" />
                            <TextBox
                                x:Name="textbox_TenKhachHang"
                                Width="240"
                                Margin="0,5,5,0"
                                BorderBrush="#00AA8D"
                                IsEnabled="False"
                                Style="{StaticResource MyTextBox}"
                                Visibility="Visible" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                x:Name="Label_GioiTinh"
                                Width="126"
                                Margin="5,5,0,0"
                                Content="Giới tính"
                                Style="{StaticResource MyLabel}"
                                Visibility="Visible" />
                            <StackPanel
                                Height="32"
                                Margin="0,5,0,0"
                                Orientation="Horizontal">
                                <RadioButton
                                    x:Name="radioButton_GioiTinhNam"
                                    Margin="0,10,0,0"
                                    BorderBrush="#00AA8D"
                                    Content="Nam"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    GroupName="group_GioiTinh"
                                    IsEnabled="False"
                                    Visibility="Visible" />
                                <RadioButton
                                    x:Name="radioButton_GioiTinhNu"
                                    Margin="10,10,0,0"
                                    BorderBrush="#00AA8D"
                                    Content="Nữ"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    GroupName="group_GioiTinh"
                                    IsEnabled="False"
                                    Visibility="Visible" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                x:Name="Label_NgaySinh"
                                Width="126"
                                Margin="5,5,0,0"
                                Content="Ngày sinh"
                                Style="{StaticResource MyLabel}"
                                Visibility="Visible" />
